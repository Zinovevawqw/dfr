<Page x:Class="MDK0101.Pages.AddSprav"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MDK0101.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddSprav">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Номер ремонтных работ" Margin="5"/>
            <TextBox Text="{Binding NomerRemontRabot}"/>
            <TextBlock Text="Название работ" Margin="5"/>
            <TextBox Text="{Binding NazvanRabot}"/>
            <TextBlock Text="Вид работ" Margin="5"/>
            <TextBox Text="{Binding VidRabot}"/>
            <TextBlock Text="Цена" Margin="5"/>
            <TextBox Text="{Binding Price}"/>
            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Height="30" Width="150" Click="SaveBtn_Click"/>
            <Button x:Name="BackBtn" Content="Отменить" Margin="5" Height="30" Width="150" Click="BackBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
